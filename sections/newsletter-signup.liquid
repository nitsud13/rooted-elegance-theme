{% comment %}
  Newsletter Signup Section
  Email capture with growing tips messaging and elegant design.
  Features subtle animation and success state handling.
{% endcomment %}

<section
  class="newsletter section"
  id="newsletter-{{ section.id }}"
  aria-label="Newsletter signup"
>
  <div class="container">
    <div class="newsletter__wrapper">
      {%- comment -%} Decorative background elements {%- endcomment -%}
      <div class="newsletter__bg" aria-hidden="true">
        <div class="newsletter__bg-gradient"></div>
        <svg class="newsletter__bg-pattern" viewBox="0 0 100 100" preserveAspectRatio="none">
          <defs>
            <pattern id="newsletter-dots-{{ section.id }}" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
              <circle cx="2" cy="2" r="1" fill="currentColor" opacity="0.3"/>
            </pattern>
          </defs>
          <rect width="100" height="100" fill="url(#newsletter-dots-{{ section.id }})"/>
        </svg>
      </div>

      <div class="newsletter__content">
        <div class="newsletter__header">
          {%- if section.settings.icon_type == 'leaf' -%}
            <div class="newsletter__icon" aria-hidden="true">
              <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M24 44V24"/>
                <path d="M24 24C24 24 24 8 40 4C40 20 32 24 24 24Z"/>
                <path d="M24 24C24 24 24 8 8 4C8 20 16 24 24 24Z"/>
                <path d="M18 38c-4-2-6-6-6-10"/>
                <path d="M30 38c4-2 6-6 6-10"/>
              </svg>
            </div>
          {%- elsif section.settings.icon_type == 'mail' -%}
            <div class="newsletter__icon" aria-hidden="true">
              <svg viewBox="0 0 48 48" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="4" y="10" width="40" height="28" rx="4"/>
                <path d="M4 14l20 14 20-14"/>
              </svg>
            </div>
          {%- endif -%}

          <h2 class="newsletter__title">
            {{ section.settings.heading | default: 'Get Growing Tips & Exclusive Offers' }}
          </h2>

          {%- if section.settings.subheading != blank -%}
            <p class="newsletter__subtitle">{{ section.settings.subheading }}</p>
          {%- endif -%}
        </div>

        <div class="newsletter__form-wrapper">
          {%- form 'customer', class: 'newsletter__form', id: 'newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">

            <div class="newsletter__form-success" data-newsletter-success hidden>
              <div class="newsletter__success-icon">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                  <path d="M20 6L9 17l-5-5"/>
                </svg>
              </div>
              <p class="newsletter__success-text">
                {{ section.settings.success_message | default: "You're in! Check your inbox for a welcome surprise." }}
              </p>
            </div>

            <div class="newsletter__form-fields" data-newsletter-fields>
              <div class="newsletter__input-group">
                <label for="newsletter-email-{{ section.id }}" class="visually-hidden">
                  Email address
                </label>
                <input
                  type="email"
                  name="contact[email]"
                  id="newsletter-email-{{ section.id }}"
                  class="newsletter__input input input--lg"
                  placeholder="{{ section.settings.placeholder | default: 'Enter your email address' }}"
                  required
                  autocomplete="email"
                  aria-describedby="newsletter-hint-{{ section.id }}"
                >
                <button
                  type="submit"
                  class="newsletter__submit btn btn--primary btn--lg"
                >
                  <span class="newsletter__submit-text">
                    {{ section.settings.button_text | default: 'Subscribe' }}
                  </span>
                  <span class="newsletter__submit-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
                      <path d="M5 12h14M12 5l7 7-7 7"/>
                    </svg>
                  </span>
                  <span class="newsletter__submit-loading" aria-hidden="true">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                      <circle cx="12" cy="12" r="10" stroke-dasharray="32" stroke-dashoffset="32">
                        <animate attributeName="stroke-dashoffset" values="32;0" dur="1s" repeatCount="indefinite"/>
                      </circle>
                    </svg>
                  </span>
                </button>
              </div>

              {%- if section.settings.show_privacy_note -%}
                <p class="newsletter__hint" id="newsletter-hint-{{ section.id }}">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/>
                    <path d="M7 11V7a5 5 0 0 1 10 0v4"/>
                  </svg>
                  <span>{{ section.settings.privacy_note | default: 'We respect your privacy. Unsubscribe anytime.' }}</span>
                </p>
              {%- endif -%}
            </div>
          {%- endform -%}
        </div>

        {%- if section.settings.show_benefits -%}
          <div class="newsletter__benefits">
            {%- for block in section.blocks -%}
              {%- if block.type == 'benefit' -%}
                <div class="newsletter__benefit" {{ block.shopify_attributes }}>
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                    <path d="M20 6L9 17l-5-5"/>
                  </svg>
                  <span>{{ block.settings.text }}</span>
                </div>
              {%- endif -%}
            {%- endfor -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

<style>
  .newsletter {
    background: var(--color-cream);
  }

  .newsletter__wrapper {
    position: relative;
    background: linear-gradient(135deg, var(--color-forest) 0%, var(--color-forest-dark) 100%);
    border-radius: var(--radius-2xl);
    padding: var(--space-16) var(--space-8);
    overflow: hidden;
  }

  /* Background decoration */
  .newsletter__bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .newsletter__bg-gradient {
    position: absolute;
    top: -50%;
    right: -20%;
    width: 80%;
    height: 200%;
    background: radial-gradient(ellipse, rgba(139, 168, 136, 0.2) 0%, transparent 70%);
    transform: rotate(-15deg);
  }

  .newsletter__bg-pattern {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    color: var(--color-white);
    opacity: 0.5;
  }

  .newsletter__content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .newsletter__header {
    margin-bottom: var(--space-8);
  }

  .newsletter__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 72px;
    height: 72px;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    border-radius: var(--radius-full);
    margin-bottom: var(--space-5);
    color: var(--color-sage-light);
    animation: float 6s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-8px); }
  }

  .newsletter__icon svg {
    width: 36px;
    height: 36px;
  }

  .newsletter__title {
    font-size: var(--text-3xl);
    color: var(--color-white);
    margin-bottom: var(--space-3);
  }

  .newsletter__subtitle {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.8);
    margin: 0;
    line-height: var(--leading-relaxed);
  }

  /* Form */
  .newsletter__form-wrapper {
    margin-bottom: var(--space-6);
  }

  .newsletter__input-group {
    display: flex;
    gap: var(--space-3);
    max-width: 500px;
    margin: 0 auto;
  }

  .newsletter__input {
    flex: 1;
    background: rgba(255, 255, 255, 0.95);
    border-color: transparent;
    font-size: var(--text-base);
  }

  .newsletter__input:focus {
    background: var(--color-white);
    box-shadow: 0 0 0 4px rgba(139, 168, 136, 0.3);
  }

  .newsletter__input::placeholder {
    color: var(--color-bark-light);
  }

  .newsletter__submit {
    position: relative;
    flex-shrink: 0;
    min-width: 140px;
    background: var(--color-earth);
    border-color: var(--color-earth);
    overflow: hidden;
  }

  .newsletter__submit:hover {
    background: var(--color-earth-dark, #A84D1F);
    border-color: var(--color-earth-dark, #A84D1F);
  }

  .newsletter__submit-text,
  .newsletter__submit-icon {
    transition: transform var(--duration-normal) var(--ease-out),
                opacity var(--duration-fast);
  }

  .newsletter__submit:hover .newsletter__submit-text {
    transform: translateX(-4px);
  }

  .newsletter__submit:hover .newsletter__submit-icon {
    transform: translateX(4px);
    opacity: 1;
  }

  .newsletter__submit-icon {
    opacity: 0.7;
  }

  .newsletter__submit-loading {
    position: absolute;
    inset: 0;
    display: none;
    align-items: center;
    justify-content: center;
    background: inherit;
  }

  .newsletter__submit.is-loading .newsletter__submit-text,
  .newsletter__submit.is-loading .newsletter__submit-icon {
    opacity: 0;
  }

  .newsletter__submit.is-loading .newsletter__submit-loading {
    display: flex;
  }

  /* Privacy hint */
  .newsletter__hint {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    margin-top: var(--space-4);
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.6);
  }

  /* Success state */
  .newsletter__form-success {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-8);
    animation: scaleIn var(--duration-normal) var(--ease-spring);
  }

  .newsletter__form-success[hidden] {
    display: none;
  }

  .newsletter__success-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: var(--color-sage);
    border-radius: var(--radius-full);
    color: var(--color-white);
  }

  .newsletter__success-text {
    font-size: var(--text-lg);
    font-weight: var(--weight-medium);
    color: var(--color-white);
    margin: 0;
  }

  /* Benefits list */
  .newsletter__benefits {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4) var(--space-6);
  }

  .newsletter__benefit {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.85);
  }

  .newsletter__benefit svg {
    color: var(--color-sage-light);
    flex-shrink: 0;
  }

  /* Mobile adjustments */
  @media (max-width: 639px) {
    .newsletter__wrapper {
      padding: var(--space-10) var(--space-5);
      border-radius: var(--radius-xl);
    }

    .newsletter__title {
      font-size: var(--text-2xl);
    }

    .newsletter__subtitle {
      font-size: var(--text-base);
    }

    .newsletter__input-group {
      flex-direction: column;
    }

    .newsletter__submit {
      width: 100%;
    }

    .newsletter__benefits {
      flex-direction: column;
      align-items: center;
      gap: var(--space-3);
    }
  }

  /* Visually hidden helper */
  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('#newsletter-form');
    if (!form) return;

    const fields = form.querySelector('[data-newsletter-fields]');
    const success = form.querySelector('[data-newsletter-success]');
    const submitBtn = form.querySelector('.newsletter__submit');

    form.addEventListener('submit', function(e) {
      // Add loading state
      submitBtn.classList.add('is-loading');
    });

    // Check for successful submission (Shopify form)
    if (window.location.search.includes('customer_posted=true')) {
      if (fields && success) {
        fields.hidden = true;
        success.hidden = false;
      }
    }

    // For AJAX submission (if using custom approach)
    // This is a placeholder for enhanced functionality
  });
</script>


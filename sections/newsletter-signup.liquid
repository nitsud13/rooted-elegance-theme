      "default": "Join 50,000+ gardeners receiving seasonal planting guides, care tips, and subscriber-only savings."
    },
    {
      "type": "text",
      "id": "placeholder",
      "label": "Email placeholder",
      "default": "Enter your email address"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Subscribe"
    },
    {
      "type": "text",
      "id": "success_message",
      "label": "Success message",
      "default": "You're in! Check your inbox for a welcome surprise."
    },
    {
      "type": "checkbox",
      "id": "show_privacy_note",
      "label": "Show privacy note",
      "default": true
    },
    {
      "type": "text",
      "id": "privacy_note",
      "label": "Privacy note text",
      "default": "We respect your privacy. Unsubscribe anytime."
    },
    {
      "type": "checkbox",
      "id": "show_benefits",
      "label": "Show benefits list",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "benefit",

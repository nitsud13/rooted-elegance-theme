{% comment %}
  Hero Section - Dual CTA
  A full-width hero with lifestyle imagery and two call-to-action buttons.
  Features organic shapes, layered depth, and bold typography.
{% endcomment %}

{{ 'section-hero.css' | asset_url | stylesheet_tag }}

<section
  class="hero"
  id="hero-{{ section.id }}"
  role="banner"
  aria-label="Hero banner"
>
  {%- if section.settings.background_image != blank -%}
    <div class="hero__media">
      <picture>
        <source
          media="(min-width: 768px)"
          srcset="{{ section.settings.background_image | image_url: width: 2400 }}"
        >
        <img
          src="{{ section.settings.background_image | image_url: width: 1200 }}"
          alt="{{ section.settings.background_image.alt | default: section.settings.heading }}"
          loading="eager"
          fetchpriority="high"
          class="hero__image"
        >
      </picture>
      <div class="hero__overlay"></div>
    </div>
  {%- else -%}
    <div class="hero__media hero__media--placeholder">
      <div class="hero__overlay"></div>
    </div>
  {%- endif -%}

  {%- comment -%} Decorative organic shapes {%- endcomment -%}
  <div class="hero__shapes" aria-hidden="true">
    <svg class="hero__shape hero__shape--1" viewBox="0 0 200 200" fill="none">
      <path d="M100 0C155.228 0 200 44.772 200 100C200 155.228 155.228 200 100 200C44.772 200 0 155.228 0 100C0 44.772 44.772 0 100 0Z" fill="currentColor"/>
    </svg>
    <svg class="hero__shape hero__shape--2" viewBox="0 0 100 100" fill="none">
      <ellipse cx="50" cy="50" rx="50" ry="35" fill="currentColor"/>
    </svg>
    <svg class="hero__shape hero__shape--leaf" viewBox="0 0 60 100" fill="none">
      <path d="M30 0C30 0 60 40 60 70C60 85 47 100 30 100C13 100 0 85 0 70C0 40 30 0 30 0Z" fill="currentColor"/>
    </svg>
  </div>

  <div class="hero__container container">
    <div class="hero__content">
      {%- if section.settings.eyebrow != blank -%}
        <p class="hero__eyebrow animate-fade-in-up">
          <span class="hero__eyebrow-icon" aria-hidden="true">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L12 6M12 18L12 22M4.93 4.93L7.76 7.76M16.24 16.24L19.07 19.07M2 12L6 12M18 12L22 12M4.93 19.07L7.76 16.24M16.24 7.76L19.07 4.93"/>
            </svg>
          </span>
          {{ section.settings.eyebrow }}
        </p>
      {%- endif -%}

      <h1 class="hero__heading animate-fade-in-up delay-1">
        {{ section.settings.heading | default: 'Transform Your Outdoor Space' }}
      </h1>

      {%- if section.settings.subheading != blank -%}
        <p class="hero__subheading animate-fade-in-up delay-2">
          {{ section.settings.subheading }}
        </p>
      {%- endif -%}

      <div class="hero__actions animate-fade-in-up delay-3">
        {%- if section.settings.primary_button_text != blank -%}
          <a
            href="{{ section.settings.primary_button_link | default: '#zone-selector' }}"
            class="btn btn--primary btn--lg hero__btn hero__btn--primary"
          >
            <span class="btn__icon" aria-hidden="true">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="10" r="3"/>
                <path d="M12 2a8 8 0 0 0-8 8c0 5.4 7 12 8 12s8-6.6 8-12a8 8 0 0 0-8-8z"/>
              </svg>
            </span>
            {{ section.settings.primary_button_text }}
          </a>
        {%- endif -%}

        {%- if section.settings.secondary_button_text != blank -%}
          <a
            href="{{ section.settings.secondary_button_link | default: '/collections/all' }}"
            class="btn btn--ghost btn--lg hero__btn hero__btn--secondary"
          >
            {{ section.settings.secondary_button_text }}
            <span class="btn__arrow" aria-hidden="true">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </span>
          </a>
        {%- endif -%}
      </div>

      {%- if section.settings.show_trust_badges -%}
        <div class="hero__trust animate-fade-in-up delay-4">
          <div class="hero__trust-item">
            <svg class="hero__trust-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <polyline points="9,12 11,14 15,10"/>
            </svg>
            <span>1-Year Guarantee</span>
          </div>
          <div class="hero__trust-item">
            <svg class="hero__trust-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M12 2L2 7l10 5 10-5-10-5z"/>
              <path d="M2 17l10 5 10-5"/>
              <path d="M2 12l10 5 10-5"/>
            </svg>
            <span>Expert-Selected</span>
          </div>
          <div class="hero__trust-item">
            <svg class="hero__trust-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="1" y="3" width="15" height="13" rx="2"/>
              <path d="M16 8h4a2 2 0 0 1 2 2v9a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2v-1"/>
            </svg>
            <span>Free Shipping $100+</span>
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>

  {%- comment -%} Scroll indicator {%- endcomment -%}
  <div class="hero__scroll" aria-hidden="true">
    <span class="hero__scroll-text">Scroll to explore</span>
    <div class="hero__scroll-line">
      <div class="hero__scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    min-height: 100svh;
    display: flex;
    align-items: center;
    overflow: hidden;
  }

  .hero__media {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero__media--placeholder {
    background: linear-gradient(135deg, var(--color-forest) 0%, var(--color-forest-dark) 100%);
  }

  .hero__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(27, 77, 62, 0.85) 0%,
      rgba(27, 77, 62, 0.6) 50%,
      rgba(27, 77, 62, 0.4) 100%
    );
  }

  /* Decorative organic shapes */
  .hero__shapes {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero__shape {
    position: absolute;
    color: rgba(255, 255, 255, 0.03);
  }

  .hero__shape--1 {
    width: clamp(300px, 40vw, 600px);
    top: -10%;
    right: -5%;
    animation: float 8s ease-in-out infinite;
  }

  .hero__shape--2 {
    width: clamp(150px, 20vw, 300px);
    bottom: 10%;
    left: -5%;
    animation: float 10s ease-in-out infinite;
    animation-delay: -3s;
  }

  .hero__shape--leaf {
    width: clamp(60px, 8vw, 100px);
    top: 20%;
    left: 10%;
    color: rgba(139, 168, 136, 0.2);
    animation: float 6s ease-in-out infinite;
    animation-delay: -5s;
  }

  .hero__container {
    position: relative;
    z-index: 2;
    padding-top: var(--space-24);
    padding-bottom: var(--space-24);
  }

  .hero__content {
    max-width: 700px;
  }

  .hero__eyebrow {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-4);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    letter-spacing: var(--tracking-widest);
    text-transform: uppercase;
    color: var(--color-sage-light);
  }

  .hero__eyebrow-icon {
    display: flex;
    animation: pulse 2s ease-in-out infinite;
  }

  .hero__heading {
    margin-bottom: var(--space-6);
    font-size: var(--text-5xl);
    font-weight: var(--weight-medium);
    line-height: 1.05;
    color: var(--color-white);
    text-shadow: 0 2px 40px rgba(0, 0, 0, 0.2);
  }

  .hero__subheading {
    margin-bottom: var(--space-8);
    font-size: var(--text-xl);
    font-weight: var(--weight-light);
    line-height: var(--leading-relaxed);
    color: rgba(255, 255, 255, 0.9);
    max-width: 550px;
  }

  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-4);
    margin-bottom: var(--space-10);
  }

  .hero__btn {
    min-width: 200px;
  }

  .hero__btn--primary {
    box-shadow: var(--shadow-lg), 0 8px 40px rgba(196, 92, 38, 0.4);
  }

  .hero__btn--primary:hover {
    box-shadow: var(--shadow-xl), 0 12px 50px rgba(196, 92, 38, 0.5);
  }

  .btn__icon,
  .btn__arrow {
    display: flex;
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .hero__btn--primary:hover .btn__icon {
    animation: pulse 0.6s ease-in-out;
  }

  .hero__btn--secondary:hover .btn__arrow {
    transform: translateX(4px);
  }

  .hero__trust {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-6);
  }

  .hero__trust-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    color: rgba(255, 255, 255, 0.8);
  }

  .hero__trust-icon {
    opacity: 0.7;
  }

  /* Scroll indicator */
  .hero__scroll {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    color: rgba(255, 255, 255, 0.6);
    z-index: 2;
  }

  .hero__scroll-text {
    font-size: var(--text-xs);
    font-weight: var(--weight-medium);
    letter-spacing: var(--tracking-widest);
    text-transform: uppercase;
  }

  .hero__scroll-line {
    width: 1px;
    height: 60px;
    background: rgba(255, 255, 255, 0.2);
    position: relative;
    overflow: hidden;
  }

  .hero__scroll-dot {
    width: 3px;
    height: 12px;
    background: var(--color-earth);
    border-radius: var(--radius-full);
    position: absolute;
    left: -1px;
    animation: scrollDown 2s ease-in-out infinite;
  }

  @keyframes scrollDown {
    0% {
      top: 0;
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    80% {
      opacity: 1;
    }
    100% {
      top: 48px;
      opacity: 0;
    }
  }

  /* Mobile adjustments */
  @media (max-width: 767px) {
    .hero {
      min-height: 90vh;
      min-height: 90svh;
    }

    .hero__container {
      padding-top: var(--space-20);
    }

    .hero__heading {
      font-size: var(--text-4xl);
    }

    .hero__actions {
      flex-direction: column;
    }

    .hero__btn {
      width: 100%;
      justify-content: center;
    }

    .hero__trust {
      flex-direction: column;
      gap: var(--space-3);
    }

    .hero__scroll {
      display: none;
    }
  }

  /* Large screens */
  @media (min-width: 1200px) {
    .hero__content {
      max-width: 800px;
    }

    .hero__heading {
      font-size: clamp(3.5rem, 6vw, 5rem);
    }
  }
</style>

{% schema %}
{
  "name": "Hero - Dual CTA",
  "tag": "section",
  "class": "section-hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image",
      "info": "Recommended: 2400x1600px. Will be overlaid with a green gradient."
    },
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Premium Quality Trees & Shrubs"
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Transform Your Outdoor Space"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover trees and shrubs perfectly matched to your growing zone. Expert-selected, guaranteed to thrive."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary button text",
      "default": "Shop by Growing Zone"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary button text",
      "default": "Browse All Trees"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "show_trust_badges",
      "label": "Show trust badges",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hero - Dual CTA",
      "category": "Hero"
    }
  ]
}
{% endschema %}

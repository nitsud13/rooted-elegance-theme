    margin-bottom: var(--space-6);
  }

  .trust-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    text-align: center;
    font-size: var(--text-xs);
    color: var(--color-bark-light);
  }

  .trust-item svg {
    color: var(--color-sage);
  }


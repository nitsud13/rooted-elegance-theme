    opacity: 1;
  }

  .gallery-nav:hover {
    background: var(--color-forest);
    color: var(--color-white);
  }

  .gallery-prev { left: var(--space-4); }
  .gallery-next { right: var(--space-4); }

  .gallery-thumbnails {
    display: flex;
    gap: var(--space-3);
    overflow-x: auto;
    padding: var(--space-2);
  }

